---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Resources - Nostr BCH" description="Resources, tools, and community links for Nostr BCH">
  <Header />
  
  <main class="pt-16">
    <section class="bg-gradient-to-br from-indigo-600 to-purple-700 dark:from-indigo-800 dark:to-purple-900 text-white py-20 transition-colors duration-300">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Resources</h1>
        <p class="text-xl text-purple-100 dark:text-purple-200 max-w-3xl mx-auto">
          Everything you need to dive deeper into the Nostr BCH ecosystem. From technical documentation to community tools.
        </p>
      </div>
    </section>
    
    <section class="py-16 bg-white dark:bg-gray-900 transition-colors duration-300">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="space-y-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Nostr Clients</h2>
            <div class="space-y-4">
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Damus</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">iOS native client with beautiful design</p>
                <a href="https://damus.io" class="text-nostr-purple dark:text-nostr-light-purple hover:text-nostr-dark-purple font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Amethyst</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Feature-rich Android client</p>
                <a href="https://github.com/vitorpamplona/amethyst" class="text-nostr-purple dark:text-nostr-light-purple hover:text-nostr-dark-purple font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Iris</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Web-based client</p>
                <a href="https://iris.to" class="text-nostr-purple dark:text-nostr-light-purple hover:text-nostr-dark-purple font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Snort</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Fast web client</p>
                <a href="https://snort.social" class="text-nostr-purple dark:text-nostr-light-purple hover:text-nostr-dark-purple font-medium text-sm">
                  Visit →
                </a>
              </div>
            </div>
          </div>
          
          <div class="space-y-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">BCH Wallets</h2>
            <div class="space-y-4">
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Stack Wallet</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Open-source, non-custodial, privacy-preserving wallet</p>
                <a href="https://stackwallet.com" class="text-bch-green hover:text-bch-dark-green font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Electron Cash</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Advanced desktop wallet</p>
                <a href="https://electroncash.org" class="text-bch-green hover:text-bch-dark-green font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Paytaca</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Mobile wallet with smart features</p>
                <a href="https://paytaca.com" class="text-bch-green hover:text-bch-dark-green font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Zapit</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Simple BCH wallet</p>
                <a href="https://zapit.io" class="text-bch-green hover:text-bch-dark-green font-medium text-sm">
                  Visit →
                </a>
              </div>
            </div>
          </div>
          
          <div class="space-y-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Developer Tools</h2>
            <div class="space-y-4">
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Nostr NIPs</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Protocol specifications</p>
                <a href="https://github.com/nostr-protocol/nips" class="text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Nostr Tools</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">JavaScript library for Nostr</p>
                <a href="https://github.com/nbd-wtf/nostr-tools" class="text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">BCH Toolkit</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">BCH development tools</p>
                <a href="https://github.com/bitcoincashorg/bitcoincash.org" class="text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 font-medium text-sm">
                  Visit →
                </a>
              </div>
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md dark:hover:shadow-gray-700/20 transition-shadow bg-white dark:bg-gray-800">
                <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Relay Explorer</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">Find and test Nostr relays</p>
                <a href="https://nostr.watch" class="text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300 font-medium text-sm">
                  Visit →
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-16">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">Learning Resources</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-gradient-to-r from-nostr-purple to-nostr-light-purple dark:from-nostr-dark-purple dark:to-purple-800 rounded-xl p-6 text-white">
              <h3 class="text-xl font-bold mb-4">Nostr Resources</h3>
              <ul class="space-y-2">
                <li><a href="https://nostr.com" class="hover:text-purple-200 transition-colors">Nostr.com - Official Website</a></li>
                <li><a href="https://github.com/aljazceru/awesome-nostr" class="hover:text-purple-200 transition-colors">Awesome Nostr - Curated List</a></li>
                <li><a href="https://nostr.how" class="hover:text-purple-200 transition-colors">Nostr.how - Getting Started Guide</a></li>
                <li><a href="https://usenostr.org" class="hover:text-purple-200 transition-colors">UseNostr - Directory</a></li>
              </ul>
            </div>
            
            <div class="bg-gradient-to-r from-bch-green to-green-600 dark:from-bch-dark-green dark:to-green-700 rounded-xl p-6 text-white">
              <h3 class="text-xl font-bold mb-4">Bitcoin Cash Resources</h3>
              <ul class="space-y-2">
                <li><a href="https://bitcoincash.org" class="hover:text-green-200 transition-colors">BitcoinCash.org - Official Website</a></li>
                <li><a href="https://whybitcoincash.com" class="hover:text-green-200 transition-colors">Why Bitcoin Cash?</a></li>
                <li><a href="https://read.cash" class="hover:text-green-200 transition-colors">Read.cash - BCH Publishing</a></li>
                <li><a href="https://bitcoincash.site" class="hover:text-green-200 transition-colors">BCH Directory</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <!-- Support Us Section -->
        <div class="mt-16 bg-gradient-to-r from-bch-green to-green-600 dark:from-bch-dark-green dark:to-green-700 rounded-xl p-8 text-white">
          <div class="text-center">
            <h2 class="text-2xl font-bold mb-4">Support Nostr BCH</h2>
            <p class="mb-6 max-w-2xl mx-auto">
              Help us maintain this resource hub and continue building tools for the decentralized web. Your Bitcoin Cash donations directly support development and community growth.
            </p>
            
            <div class="bg-white bg-opacity-10 rounded-lg p-6 max-w-md mx-auto">
              <h3 class="font-semibold mb-3">BCH Donation Address</h3>
              <div class="bg-white bg-opacity-20 p-3 rounded-lg mb-4">
                <code class="text-sm break-all font-mono">bitcoincash:qqhplfm3845xpsxlfhqd5pm00yekelzf9cucae20eg</code>
              </div>
              <div class="flex flex-col sm:flex-row gap-3 justify-center">
                <button 
                  onclick="navigator.clipboard.writeText('bitcoincash:qqhplfm3845xpsxlfhqd5pm00yekelzf9cucae20eg')" 
                  class="bg-white text-bch-green px-4 py-2 rounded-lg font-medium hover:bg-gray-100 transition-colors"
                >
                  Copy Address
                </button>
                <a 
                  href="/get-started#support" 
                  class="border-2 border-white text-white px-4 py-2 rounded-lg font-medium hover:bg-white hover:text-bch-green transition-colors"
                >
                  View QR Code
                </a>
              </div>
            </div>
            
            <p class="mt-4 text-green-100 text-sm">
              Every contribution helps us build better tools for decentralized social networking. Thank you! 🙏
            </p>
          </div>
        </div>
        
        <div class="mt-16 bg-gray-50 dark:bg-gray-800 rounded-xl p-8 border dark:border-gray-700">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Community</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Twitter</h3>
              <a href="https://twitter.com/nostrbch" class="text-blue-600 hover:text-blue-800">@nostrbch</a>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.374 0 0 5.373 0 12s5.374 12 12 12 12-5.373 12-12S18.626 0 12 0zm5.568 8.16c-.169 1.858-.896 9.728-.896 9.728-.42 3.237-1.557 3.799-2.568 3.799-.512 0-.986-.212-1.417-.563-.2-.165-.431-.362-.622-.512-.622-.495-1.177-.93-1.742-1.383-.854-.689-1.842-1.469-2.301-2.204-.116-.186-.2-.344-.249-.474-.093-.249-.093-.474.023-.661.093-.155.249-.279.42-.372.512-.279 1.020-.558 1.577-.837.558-.279 1.181-.558 1.881-.837.7-.279 1.484-.558 2.315-.837.831-.279 1.739-.558 2.647-.837.279-.093.558-.093.837 0 .279.093.558.279.744.558.186.279.279.651.279 1.020 0 .372-.093.744-.279 1.020-.279.372-.651.558-1.020.651-.372.093-.744.093-1.020 0-.279-.093-.558-.279-.744-.558-.186-.279-.279-.651-.279-1.020 0-.372.093-.744.279-1.020.279-.372.651-.558 1.020-.651z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Telegram</h3>
              <a href="https://t.me/nostrbch" class="text-blue-600 hover:text-blue-800">Join Group</a>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-gray-800 dark:bg-gray-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-2">GitHub</h3>
              <a href="https://github.com/nostrbch" class="text-gray-800 dark:text-gray-300 hover:text-gray-600 dark:hover:text-gray-100">@nostrbch</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>